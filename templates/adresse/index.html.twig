{% extends 'adresse/bars.html.twig' %}

{% block contenpage %}
	<div class="">
		<div class="page-title">
			<div class="title_left">
				<h5>
					{{ "backend.user.listing"|trans }}
				</h5>
			</div>
		</div>

		<div class="clearfix"></div>

		<div class="row">
			<div class="col-md-12">
				<div class="x_panel">
					<div class="x_title">
						<h2>
							{{ "backend.user.user_listing"|trans }}</h2>
						<ul class="nav navbar-right panel_toolbox">
							<li>
								<a href="{{ path('app_adresse_new') }}" class="btn btn-success">NEW</a>
							</li>
						</ul>
						<div class="clearfix"></div>
					</div>
					<div class="x_content">
						<div class="row">
							<form  id="grpaction" method="post" name="grpaction">
								<div class="form-group form-inline">
									<select class="form-control" name="action" required id="action_select">
										<option value="">
											{{ "backend.user.group_actions"|trans }}</option>
										<option value="{{"backend.user.deactivate"|trans }}">
											{{ "backend.user.deactivate"|trans }}</option>
										<option value="{{"backend.user.Activate"|trans }}">
											{{ "backend.user.Activate"|trans }}</option>
										<option value="{{"backend.user.delete"|trans }}">
											{{ "backend.user.delete"|trans }}</option>
									</select>
									<button class="btn btn-primary" type="submit">Go!!</button>
								</div>

							</form>
							<table id="example" class="display table table-striped table-bordered dataminetables">
								<thead>
									<th><input type="checkbox" id="select_all" name="select_all"></th>
									<th>{{ "Id"|trans }}</th>
									<th>{{ "Adresse"|trans }}</th>
									<th>{{ "ville"|trans }}</th>
                                    <th>{{ "Code postal"|trans }}</th>
									
								</thead>
								<tbody>
									{% for adresse  in adresses  %}
										<tr>
											<td><input type="checkbox" class="chkgrp" name="chkgrp[]" value="{{ adresse.id }}"></td>
											<td>{{ adresse.id }}</td>
											 <td>{{ adresse.adresse }}</td>
											 <td>{{ adresse.ville }}</td>
                                             <td>{{ adresse.codepostal }}</td>
											<td>
												<a class="btn btn-primary" href="{{ path('app_adresse_edit',{'id': adresse.id}) }}">
													<i class="fa fa-edit"></i>
												</a>
											</td>
											
											<td>
												<a href="{{ path('app_adresse_delete', {'id': adresse.id}) }}" class="btn btn-danger disable-btn del-link" type="submit">
													<i class="fa fa-trash"></i>
												</a>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}