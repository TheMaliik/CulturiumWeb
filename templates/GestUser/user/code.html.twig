{% extends 'base.html.twig' %}

{% block title %}Code{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            width: 100%;
            max-width: 400px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .logo {
            width: 50%;
            margin: 0 auto;
        }

        .title {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-verify {
            width: 100%;
            background-color: #ee568e;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-verify:hover {
            background-color: #d6497a;
        }

        .alert {
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card mt-5">
            <div class="card-body">
                <h1 class="title">Vérification de Code</h1>

                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.code, 'Code') }}
                    {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-verify">Vérifier</button>
                </div>

                {{ form_end(form) }}

                {% for flash_message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ flash_message }}</div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}


