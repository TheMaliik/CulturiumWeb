{% extends 'adminbase.html.twig' %}

{% block title %}Update User{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles for user-card */
        body {
            background-color: #34495E;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .user-card {
            background-color: #ffffff;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

        .user-card img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease;
            width: 100%;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-danger {
            background-color: #dc3545; /* Different color for the "Désactiver" button */
            color: #fff;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .button-group {
            margin-top: 15px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="user-card">
        {% if user.image is not null %}
            <img src="{{ asset('uploads/images/' ~ user.image) }}" alt="User Image">
        {% else %}
            <p>No image available</p>
        {% endif %}

        <h3>Update User Information</h3>
        {{ form_start(registration_form) }}
        <div class="form-group">
            {{ form_row(registration_form.fullname, {'attr': {'class': 'form-control', 'placeholder': 'Full Name'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(registration_form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(registration_form.mdp, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(registration_form.tel, {'attr': {'class': 'form-control', 'placeholder': 'Phone Number'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(registration_form.image, {'attr': {'class': 'form-control', 'placeholder': 'Profile Image URL'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        {{ form_end(registration_form) }}

        <div class="button-group">
            <form action="{{ path('ban_user', {'id': user.id}) }}" method="post">
                <button type="submit" class="btn btn-danger">Désactiver</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
