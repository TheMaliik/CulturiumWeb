{% extends 'GestionAdresseLivraison/base.html.twig' %}

{% block title %}Résultats de la recherche{% endblock %}

{% block body %}
    <h1>Résultats de la recherche</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date de Livraison</th>
                <th>Statut</th>
                <th>Dépôt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="livraison-list">
            {% for livraison in livraisons %}
                <tr>
                    <td>{{ livraison.id }}</td>
                    <td>{{ livraison.dateDeLivraison|date('d/m/Y') }}</td>
                    <td>{{ livraison.statut }}</td>
                    <td>{{ livraison.depot }}</td>
                    <td>
                        <a href="{{ path('livraison_show', {'id': livraison.id}) }}">Afficher</a>
                        <a href="{{ path('livraison_edit', {'id': livraison.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune livraison trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
