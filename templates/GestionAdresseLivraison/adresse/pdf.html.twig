<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Liste des Adresses</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
        }
    </style>
</head>
<body>
    <h1>Liste des Adresses</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code postal </th>
            </tr>
        </thead>
        <tbody>
            {% for adresse in adresses %}
                <tr>
                    <td>{{ adresse.id }}</td>
                    <td>{{ adresse.adresse }}</td>
                    <td>{{ adresse.ville }}</td>
                    <td>{{ adresse.codepostal }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
