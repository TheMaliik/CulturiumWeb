<a href="#" onclick="if(confirm('Are you sure you want to delete this item?')) { document.getElementById('deleteForm{{ event.ide }}').submit(); }" class="btn btn-danger">Delete</a>

<form id="deleteForm{{ event.ide }}" method="post" action="{{ path('app_admin_events_delete', {'ide': event.ide}) }}" style="display: none;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.ide) }}">
</form>
