{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <h1>Events</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Ide</th>
                <td>{{ event.ide }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ event.image }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NbrPlaceDispo</th>
                <td>{{ event.nbrPlaceDispo }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.lieu }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ event.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_events_index') }}">back to list</a>

    <a href="{{ path('app_admin_events_edit', {'ide': event.ide}) }}">edit</a>

    {{ include('admin_events/_delete_form.html.twig') }}
{% endblock %}
